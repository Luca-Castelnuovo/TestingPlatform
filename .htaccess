# custom error pages
#ErrorDocument 400 /scripts/error.php?code=400
#ErrorDocument 401 /scripts/error.php?code=401
#ErrorDocument 403 /scripts/error.php?code=403
#ErrorDocument 404 /scripts/error.php?code=404

# turn mod_rewrite on
RewriteEngine On

# remove .php extensions from files
RewriteCond %{DOCUMENT_ROOT}/$1\.php -f
RewriteRule ^(.+?)/?$ /$1.php [L]
RewriteCond %{REQUEST_FILENAME} !-f [OR]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ - [L]

# block access to .txt
<Files ~ "\.txt$">
    Order allow,deny
    Deny from all
</Files>

# allow access to robots.txt
<FilesMatch robots\.txt>
    Allow from all
</FilesMatch>

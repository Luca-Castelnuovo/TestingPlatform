{% extends "partials/base.twig" %}
{% set title = "Dashboard" %}
{% set page_script = "/assets/js/dashboard.js" %}

{% block content %}
<div class="row">
    <ul class="collection with-header">
        <li class="collection-header">
            <h2>Projects <button class="btn-large waves-effect waves-light blue accent-4 right modal-trigger" data-target="project">Create Project</button></h2>
            <form id="project" class="modal">
                <div class="modal-content">
                    <h4>Create Project</h4>
                    <div class="row mb-0">
                        <div class="input-field col s12 mb-0">
                            <input id="name" name="name" type="text" class="validate" required>
                            <label for="name">Project Name</label>
                            <span class="helper-text" data-error="Valid project name is required"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn blue accent-4 waves-effect waves-light" type="submit">Submit</button>
                </div>
            </form>
        </li>
        {% if not projects %}
            <li class="collection-item">
                <div>
                    No projects found!
                </div>
            </li>
        {% endif %}
        {% for project in projects %}
            <li class="collection-item">
                <div>
                    <a href="/project/{{ project.id }}">{{ project.name }}</a>

                    <a class="secondary-content" href="#" onClick="deleteProject('{{ project.id }}')">
                        <i class="material-icons blue-icon">delete</i>
                    </a>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
